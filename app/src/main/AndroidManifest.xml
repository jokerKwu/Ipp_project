<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.kw.ac.ipp_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Memo_write"></activity>
        <activity android:name=".Memo_list" />
        <activity android:name=".Paint"
            android:screenOrientation="landscape"  />
        <activity android:name=".Calc_horizontal" />
        <activity android:name=".Calc_vertical"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:screenOrientation="sensor"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>